---
import Layout from "../layouts/Baselayout.astro";
import Phone from "../components/Phone.astro";
---


<Layout title="Frontend Mentor | Chat app CSS illustration">
	<main class="hero">
		<div class="hero__bg"></div>
		<div class="hero__bg-dark"></div>
		<section class="hero__cont">
			<Phone />
		</section>
		<section class="desc">
			<h1 class="desc__title">Simple booking</h1>
			<p class="desc__info">Stay in touch with our dog walkers through the chat interface. This makes it easy to 
			discuss arrangements and make bookings. Once the walk has been completed you can rate 
			our walker and book again all through the chat.</p>
		</section>
	</main>
</Layout>

<style>
	.hero {
		display: flex;
		flex-direction: column;
		gap: 6rem;
	}
	.hero__cont {
		display: flex;
		justify-content: center;
		align-items: center;
	}
	.hero__bg {
		background: linear-gradient(to bottom, var(--light-magenta), var(--light-violet));
		width: 200%;
		height: 200svh;
		position: absolute;
		border-radius: 0 0 20rem 20rem;
		top: -120%;
		left: -150%;
		z-index: -1;
	}
	.hero__bg-dark {
		background-color: var(--light-grayish-violet);
		width: 37%;
		height: 90svh;
		position: absolute;
		border-radius: 40rem 40rem 0 0;
		bottom: 0;
		right: -15%;
		z-index: -1;
		display: none;
	}
	
	.desc {
		display: flex;
		flex-direction: column;
		justify-content: center;
		align-items: center;
		margin-bottom: 5rem;
		padding: 0 2rem;
		text-align: center;
		.desc__title {
			margin: 0;
			font-size: 3.6rem;
			color: var(--very-dark-desaturated-violet);
			font-weight: 500;
			margin-bottom: 1rem;
		}
		.desc__info {
			text-align: center;
			color: var(--dark-grayish-violet);
			font-size: 1.4rem;
			line-height: 2;
			max-width: 45ch;
			padding: 0 2.5rem;
			margin: 0;
		}
	}
	@media (width > 800px) {
		.hero {
			flex-direction: row;
			justify-content: center;
			align-items: center;
			gap: 10rem;
			min-height: 100svh;
		}
		.hero__bg {
			width: 37%;
			left: -10%;
			border-radius: 40rem;
			height: 150svh;
			top: -50%;
		}
		.hero__bg-dark {
			display: block;
		}
		.desc {
			text-align: left;
			margin-bottom: 0;
			align-items: flex-start;
			padding: 0;
			.desc__info {
				padding: 0;
				text-align: left;
			}
		}
	}
</style>